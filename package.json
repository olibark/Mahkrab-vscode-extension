{
  "$schema": "vscode://schemas/vscode-extensions",
  "name": "mahkrab-maker",
  "displayName": "MahkrabMaker",
  "description": "Mahkrab helper for C files using a Python backend.",
  "version": "0.0.2",
  "publisher": "olibark",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/olibark/Mahkrab-vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "onLanguage:c"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Mahkrab Maker",
      "properties": {
        "mahkrab.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Interpreter to run main.py (e.g. python3, python, or full path)."
        }
      }
    }
  }
}
